<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#FFFFFF">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.sheatouk.selmy.componentsdonationasu.Util.MyTextView
            android:id="@+id/donation_donator_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:clickable="true"
            android:maxLines="1"
            android:gravity="center"
            android:text="Mahmoud Ashraf"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/guideline6"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/guideline7"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp" />
        <com.sheatouk.selmy.componentsdonationasu.Util.MyTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mahmoud Hesham"
            android:textSize="17sp"
            android:gravity="center"
            android:maxLines="1"
            android:clickable="true"
            android:textStyle="bold"
            android:id="@+id/donation_req_user"
            android:layout_marginLeft="2dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline8"
            android:layout_marginRight="2dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline6"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="2dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp" />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#dad8d8"
            android:id="@+id/view"
            tools:layout_editor_absoluteX="5dp"
            app:layout_constraintTop_toTopOf="@+id/guideline6" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_to"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline6"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline7"
            app:layout_constraintRight_toLeftOf="@+id/guideline8"
            android:layout_marginRight="2dp"
            android:id="@+id/imageView6"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp" />
        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline6"
            app:layout_constraintGuide_percent="0.29"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="82dp"
            tools:layout_editor_absoluteX="5dp" />
        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline7"
            app:layout_constraintGuide_percent="0.47"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="30dp"
            tools:layout_editor_absoluteX="170dp" />
        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline8"
            app:layout_constraintGuide_percent="0.53"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="30dp"
            tools:layout_editor_absoluteX="191dp" />
        <include
            layout="@layout/grid_row"
            android:layout_height="130dp"
            android:layout_width="0dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline6"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>