<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_row="3"
    android:layout_column="2"

    >

    <com.sheatouk.selmy.componentsdonationasu.Util.MyTextView
        android:id="@+id/myTextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comp : "
        android:layout_marginBottom="5dp"
        android:textSize="20sp"
        />
    <com.sheatouk.selmy.componentsdonationasu.Util.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From : "
        android:textSize="20sp"
        android:layout_marginBottom="5dp"
        android:id="@+id/myTextView4" />

    <com.sheatouk.selmy.componentsdonationasu.Util.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To : "
        android:textSize="20sp"
        android:layout_marginBottom="5dp"
        />

    <com.sheatouk.selmy.componentsdonationasu.Util.MyTextView
        android:id="@+id/donation_comp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arduino Uno"
        android:textSize="20sp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal|left"
        />

    <com.sheatouk.selmy.componentsdonationasu.Util.MyTextView
        android:id="@+id/donation_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16,Jan,2017"
        android:textSize="20sp"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal|left"
        />
    <com.sheatouk.selmy.componentsdonationasu.Util.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20,Sep,2017"
        android:textSize="20sp"
        android:id="@+id/donation_to"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal|left"
        />
</GridLayout>